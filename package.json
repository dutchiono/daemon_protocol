{
  "name": "@daemon/social-network",
  "version": "1.0.0",
  "description": "Daemon Social Network - Complete Package",
  "private": true,
  "workspaces": [
    "daemon-node",
    "daemon-client",
    "social-network/hub",
    "social-network/pds",
    "social-network/gateway"
  ],
  "scripts": {
    "install:all": "npm install",
    "install:pds": "npm install cors --workspace=social-network/pds",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "npm run build --workspaces",
    "build:pds": "npm run build --workspace=social-network/pds",
    "build:gateway": "npm run build --workspace=social-network/gateway",
    "build:client": "npm run build --workspace=daemon-client && npm run deploy:client",
    "deploy:client": "sudo cp -r daemon-client/dist/* /var/www/daemon-client/ && sudo systemctl reload nginx",
    "start:node": "cd daemon-node && npm start all",
    "start:client": "cd daemon-client && npm run electron:dev",
    "check": "bash scripts/check-reactions.sh",
    "check-reactions": "bash scripts/check-reactions.sh"
  },
  "devDependencies": {
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
