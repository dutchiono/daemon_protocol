{
  "name": "@daemon/client",
  "version": "1.0.0",
  "description": "Daemon Social Network Windows Client (Farcaster-style)",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "deploy": "sudo cp -r dist/* /var/www/daemon-client/ && sudo systemctl reload nginx",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "dist": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ethers": "^6.9.0",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.2",
    "electron": "^28.0.0",
    "react-router-dom": "^6.21.0",
    "lucide-react": "^0.303.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.daemon.social",
    "productName": "Daemon Social",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
